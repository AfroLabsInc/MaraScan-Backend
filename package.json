{
  "name": "MaraScan-Backend",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "node ace serve --watch",
    "build": "node ace build --production",
    "start": "node server.js",
    "lint": "eslint . --ext=.ts",
    "format": "prettier --write .",
    "commit": "cz"
  },
  "eslintConfig": {
    "extends": [
      "plugin:adonis/typescriptApp",
      "prettier"
    ],
    "plugins": [
      "prettier"
    ],
    "rules": {
      "prettier/prettier": [
        "error"
      ]
    }
  },
  "eslintIgnore": [
    "build"
  ],
  "prettier": {
    "trailingComma": "es5",
    "semi": false,
    "singleQuote": true,
    "useTabs": false,
    "quoteProps": "consistent",
    "bracketSpacing": true,
    "arrowParens": "always",
    "printWidth": 100
  },
  "devDependencies": {
    "@adonisjs/assembler": "^5.8.1",
    "@japa/preset-adonis": "^1.1.0",
    "@japa/runner": "^2.0.9",
    "adonis-preset-ts": "^2.1.0",
    "eslint": "^8.22.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-adonis": "^2.1.0",
    "eslint-plugin-prettier": "^4.2.1",
    "pino-pretty": "^9.0.1",
    "prettier": "^2.7.1",
    "typescript": "~4.6",
    "youch": "^3.2.0",
    "youch-terminal": "^2.1.4",
    "cz-emoji": "^1.3.2-canary.2"
  },
  "dependencies": {
    "@adonisjs/auth": "^8.2.2",
    "@adonisjs/core": "^5.8.6",
    "@adonisjs/lucid": "^18.1.0",
    "@adonisjs/repl": "^3.1.11",
    "africastalking": "^0.5.5",
    "axios": "^0.27.2",
    "cryptr": "^6.0.3",
    "currency-converter-lt": "^1.3.1",
    "ethers": "^5.7.1",
    "imagekit": "^4.1.1",
    "luxon": "^3.0.1",
    "mpesa-api": "^3.0.2",
    "@metamask/eth-sig-util": "^5.0.0",
    "pg": "^8.8.0",
    "phc-bcrypt": "^1.0.7",
    "proxy-addr": "^2.0.7",
    "randomatic": "^3.1.1",
    "reflect-metadata": "^0.1.13",
    "source-map-support": "^0.5.21",
    "web3": "^1.7.5"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-emoji"
    }
  }
}
